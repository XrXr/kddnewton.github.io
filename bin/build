#!/usr/bin/env ruby

require 'erb'
require 'kramdown'

dir = File.expand_path(File.join('..', 'src'), __dir__)

body = Kramdown::Document.new(File.read(File.join(dir, 'index.md'))).to_html
result = ERB.new(File.read(File.join(dir, 'template.html'))).result(binding)

File.write('index.html', result)
